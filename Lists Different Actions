friends = ['Tom' , 'Dick' ,  'Harry']
print (friends[0])
print (friends[1])
print (friends[2])

#printing individual messages
message1 = f" Hello {friends[0].title()}"
message2 = f" Yo! {friends[1].title()}"
message3 = f" Whats up {friends[2].title()}"
print(message1)
print(message2)
print(message3)

#modify a list element
friends[1] = 'Mike'
print(friends)

#adding elements to a list
#appending elements to the end of a list
friends.append('Dick')
friends.append('Terry')
print(friends)

#inserting elements into a list
friends.insert(2, 'Eddie')
friends.insert(0, 'Jack')
print(friends)

#removing elements from a list(del statement)
del friends[3]
del friends[5]
print(friends)

#removing elements from a list(pop() method)
print(friends)
poppedOut = friends.pop()
print(poppedOut)

#popping items from anywhere in a list
#remove 2nd item from the list
secondItem = friends.pop(2)
print (secondItem)
print (friends)

#removing an item by value
friends.remove('Harry')
print(friends)


